@using YemekSiparis.BLL.Models.ViewModels
@model CreateOrderDetailVM

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12 text-center">
            <div class="total-price-container animate__animated animate__fadeIn">
                <h2 class="total-price-text">Toplam Ücret:</h2>
                <span id="totalPrice" class="total-price">@Model.TotalPrice ₺</span>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.js"></script>
    <script>
        document.getElementById('totalPrice').innerText = formatCurrency(@Model.TotalPrice);

        function formatCurrency(value) {
            return new Intl.NumberFormat('tr-TR', { style: 'currency', currency: 'TRY' }).format(value);
        }

        document.addEventListener("DOMContentLoaded", function () {
            animateTotalPrice();
        });

        function animateTotalPrice() {
            document.getElementById('totalPrice').classList.add('animate__animated', 'animate__fadeIn');
        }
    </script>
    <style>
        .total-price-container {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            padding: 15px;
            margin: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: inline-block;
        }

        .total-price-text {
            font-size: 12px; /* Adjusted font size for better readability */
            color: #dc3545;
            font-weight: bold;
        }

        .total-price {
            font-size: 20px; /* Adjusted font size for better visibility */
            font-weight: bold;
            color: #dc3545;
        }
    </style>
}
