@using YemekSiparis.BLL.Models.ViewModels;
@using YemekSiparis.Core.Entities;


@model OrderDetailVM

<h1>GEÇMİŞ SİPARİŞLER</h1>
<hr/>
<div class="row">
    <div class="col-lg-11 offset-1 ">
        <table class=" table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Menü Adı</th>
                    <th>Menü Adeti</th>
                    <th>Menü Fiyatı</th>
                    <th style="justify-content :center;" scope="col">İşlem</th>

                </tr>
            </thead>
            <tbody>
                @foreach (OrderDetail item in Model.OrderDetails)
                {
                    <tr>
                        <td>@item.Food.Name</td>                        
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice</td>
                        <td style="justify-content:center;">
                            <a asp-action="OrderHardDelete" asp-controller="UserProfile" asp-route-id="@item.Id" class="d-flex btn btn-success "><b>Geçmişimden Kaldır</b></a>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="9">
                        <a class="btn btn-success" asp-action="ProfileDetail"  style="width:100%">Profile Dön</a>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
