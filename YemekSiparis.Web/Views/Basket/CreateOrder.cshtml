@using YemekSiparis.Core.Enums;
@using YemekSiparis.BLL.Models.ViewModels;
@model CreateOrderDetailVM

@{
    ViewData["Title"] = "CreateOrder";
}

<h1>CreateOrder</h1>

<h4>OrderDetail</h4>
<hr />
<div class="row" onloadstart="TotalPrice()">
    <div class="col-md-4">
        <form asp-action="CreateOrder" id="orderForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Food.Name" class="control-label">Yemek Adı</label>
                <input asp-for="Food.Name" class="form-control" />
                <input type="hidden" id="foodid" asp-for="FoodId" />
                <span asp-validation-for="Food.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" onchange="TotalPrice()" id="quantity" class="form-control" min="1" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodSize" class="control-label"></label>
                <select asp-for="FoodSize" onchange="TotalPrice()" id="food-size" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(FoodSize)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="FoodSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraId" class="control-label"></label>

                @for (int i = 0; i < Model.Extras.Count; i++)
                {
                <div class="form-group">
                        <input asp-for="@Model.Extras[i].IsSelected" id="#checkboxId" onchange="CheckExtra(@Model.Extras[i].Id,this)" type="checkbox" />
                <input asp-for="@Model.Extras[i].Id" id="extraid" on type="hidden" />
                @Model.Extras[i].Name
                </div>
                }
                <span asp-validation-for="ExtraId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeverageId" class="control-label"></label>
                @for (int i = 0; i < Model.Beverages.Count; i++)
                {
                    <div class="form-group">
                        <input asp-for="@Model.Beverages[i].IsSelected" onchange="CheckBeverage(@Model.Beverages[i].Id,this)" type="checkbox" />
                        <input asp-for="@Model.Beverages[i].Id" type="hidden" />
                        @Model.Beverages[i].Name
                    </div>
                }
                <span asp-validation-for="BeverageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" required="" />
            </div>
 

        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>



<div id="totalPrice">
</div>



<script>


    document.addEventListener("DOMContentLoaded", function () {
        TotalPrice();
    });

    function TotalPrice() {
        console.log("TotalPrice function is triggered.");
    }
</script>

